{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },

    "types": ["@nuxt/types", "@nuxt/typescript-build", "@types/node"]
  },
  "include": [".nuxt/nuxt.d.ts", "**/*"],
  "exclude": ["node_modules"]
}
